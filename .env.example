# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=saintara
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API URL for Frontend
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=Saintara <noreply@saintara.com>

# Sentry Error Tracking (optional but recommended for production)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id

# Database Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# Redis Configuration (optional, for caching and session storage)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
