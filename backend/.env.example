# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Option 1: Use Neon Database (Recommended for production)
# Get your connection string from: https://console.neon.tech
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/saintara?sslmode=require

# Option 2: Use Traditional PostgreSQL (for local development)
# Comment out DATABASE_URL above and uncomment the following:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=saintara
# DB_USER=postgres
# DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Frontend URL (for payment redirects)
FRONTEND_URL=http://localhost:3000

# Payment Gateway Configuration
# Default payment provider: stripe or xendit
DEFAULT_PAYMENT_PROVIDER=stripe
DEFAULT_CURRENCY=USD

# Stripe Configuration (for international payments)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
# Get webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Xendit Configuration (for Indonesian payments)
# Get your keys from: https://dashboard.xendit.co/settings/developers#api-keys
XENDIT_SECRET_KEY=xnd_xxxxxxxxxxxxxxxxxxxxx
# Webhook verification token from: https://dashboard.xendit.co/settings/developers#webhooks
XENDIT_WEBHOOK_TOKEN=xxxxxxxxxxxxxxxxxxxxx

# Email Configuration (for verification & password reset emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password_or_app_password
EMAIL_FROM=Saintara <noreply@saintara.com>

# Security Configuration
# Account Lockout Settings
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# Email Verification
REQUIRE_EMAIL_VERIFICATION=true
EMAIL_VERIFICATION_TOKEN_EXPIRY_HOURS=24

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=1

# Cache Configuration
CACHE_DEFAULT_TTL_MINUTES=5
CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
PASSWORD_RESET_RATE_LIMIT_MAX_REQUESTS=3

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=info
